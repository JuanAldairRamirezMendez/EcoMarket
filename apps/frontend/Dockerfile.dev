# Dockerfile para desarrollo del frontend
FROM node:18-alpine

WORKDIR /app

# Instalar pnpm
RUN npm install -g pnpm

# Copiar archivos de dependencias
COPY package*.json ./
COPY pnpm-lock.yaml ./

# Instalar dependencias
RUN pnpm install

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 4200

# Comando de desarrollo
CMD ["pnpm", "start", "--host", "0.0.0.0"]